<table class="table table-striped table-hover table-condensed" id="favorite-shows-table">
  <thead>
    <tr>
      <th><%= link_to sortable "id" %></th>
      <th>Favorite</th>
      <th></th>
      <th><%= link_to sortable "name", "Show" %></th>
      <th><%= link_to sortable "premiere", "Premiere Date" %></th>
      <th>Day</th>
      <th>Time</th>
      <th><%= link_to sortable "station" %></th>
    </tr>
  </thead>
  <tbody>
    <% @shows.each do |x| %>
      <tr>
        <td><%= x.id %></td>
        <td>
          <%=form_tag favorite_path(x), method: :delete %>
            <input type="hidden" name="show_id" value=<%= x.id %>>
            <button class="btn btn-danger" data-id=<%= x.id %> data-action="unfavorite">Unfavorite</button>
            </form>
        </td>
        <td><img src="<%=x.pic_url%>"></td>
        <td><%= x.name %></td>
        <td><%= x.premiere %></td>
        <td><%= x.day %></td>
        <td><%= x.time %></td>
        <td><%= x.station %></td>
      </tr>
    <% end %>
  </tbody>
</table> 
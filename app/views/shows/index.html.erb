<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>id</th>
      <th>Favorite</th>
      <th></th>
      <th>Show</th>
      <th>Premiere Date</th>
      <th>Day</th>
      <th>Time</th>
      <th>Station</th>
    </tr>
  </thead>
  <tbody>
    <% @shows.each do |x| %>
      <tr>
        <td><%= x.id %></td>
        <td>
          <% if @favorites.include? x.id %>
            <%=form_tag favorite_path(x), method: :delete %>
              <input type="hidden" name="show_id" value=<%= x.id %>>
              <button class="btn btn-danger">Unfavorite</button>
              </form>
          <% else %>
            <%=form_tag favorites_path, method: :post %>
              <input type="hidden" name="show_id" value=<%= x.id %>>
              <button class="btn btn-success">Favorite</button>
              </form>
          <% end %>
        </td>
        <td><img src="<%=x.pic_url%>"></td>
        <td><%= x.name %></td>
        <td><%= x.premiere %></td>
        <td><%= x.day %></td>
        <td><%= x.time %></td>
        <td><%= x.station %></td>
      </tr>
    <% end %>
  </tbody>
</table> 
<!DOCTYPE html>
  <head>
  </head>
  
  <body>
	<!-- WRAPPER -->
  	<div class="wrapper">

    <!-- HERO UNIT -->
    <section class="hero-unit-slider">
      <div id="carousel-hero" class="slick-carousel">
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <%= image_tag("almosthuman.jpg", alt: "Slider Image") %>
            <div class="carousel-caption">
              <h2 class="hero-heading">SEARCH</h2>
              <p class="lead">Find what you are looking for with the click of a button</p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- END HERO UNIT -->

    <!-- PAGE CONTENT -->
    <div class="page-content page-search-result">
      <div class="container">
        <h2>Results found for keyword(s): <strong><%= @search_text %></strong></h2>
        <!-- Search Form -->
        <form class="form form-horizontal" action="<%=search_path %>" method="GET">
          <div class="input-group input-group-lg">
            <input type="text" class="form-control input-lg" placeholder="<%= @search_text %>" name="search">
              <span class="input-group-btn">
              <button type="submit" class="btn btn-primary btn-lg"><i class="icon ion-android-search"></i> Go</button>
            </span>
          </div>
        </form>
        <!-- End Search Form -->

        <!-- Search Results -->
        <ul class="list-unstyled list-results">
          <% @results.each do |show| %>
          <li class="type-portfolio">
            <div class="media clearfix">
              <a href="<%= show_path(show) %>" target="_blank" class="pull-left"><img src="<%= show.pic_url %>" alt="Search Result" class="media-object"></a>
              <div class="container media-body">
                <h3><a href="<%= show_path(show) %>" target="_blank"><%= show.name %></a></h3>
                <p><%= show.day %>'s' at <%= show.time %> on <%= show.station %></p>
                <!-- <span class="text-muted">File size: 857 KB</span> -->
                <p><%= show.summary %></p>
              </div>
            </div>
          </li>
          <% end %>
        </ul>
        <!-- End Search Results -->

      </div>
    </div>
    <!-- END PAGE CONTENT -->
  	</div>
  </body>
 </html>